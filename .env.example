# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
# OR use Bearer Token (temporary):
AWS_BEARER_TOKEN_BEDROCK=

# Embedding Configuration (Bedrock Titan)
EMBEDDING_MODEL=amazon.titan-embed-text-v1
EMBEDDING_DIMENSIONS=1536

# LLM Configuration (Bedrock)
# Use Amazon Nova Lite for text generation (no approval needed)
LLM_MODEL=amazon.nova-lite-v1:0
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000

# Image Analysis Configuration
# Use Nova Pro for image-to-text (OCR and description)
USE_IMAGE_LLM=true
IMAGE_LLM_MODEL=amazon.nova-pro-v1:0

# OpenAI API Configuration (OPTIONAL - not used with Bedrock)
# OPENAI_API_KEY=sk-your-api-key-here

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./indexes/chromadb
CHROMA_COLLECTION_NAME=adobe_documents

# Data Directories
DATA_RAW_DIR=./data/raw
DATA_STAGED_DIR=./data/staged

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RESPECT_SECTIONS=true
INCLUDE_IMAGES=true
INCLUDE_TABLES=true

# Retrieval Configuration
RETRIEVAL_TOP_K=5
SIMILARITY_THRESHOLD=0.7

# API Configuration (for serve.py)
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Streamlit Configuration (for app.py)
FASTAPI_URL=http://localhost:8000

# Logging
LOG_LEVEL=INFO
